<form action="/" method="POST" class="form-inline" id="entry-form">
  <fieldset class="control-group <%= @entry.errors.full_messages.empty? ? '' : 'error' %>">
    <div class="input-prepend">
      <span class="add-on"><i class="icon-tasks"></i></span><input type="text" name="entry[serial]" placeholder="ISBN" id="entry-isbn"/>
    </div>

    <div class="input-prepend">
      <span class="add-on"><i class="icon-tasks"></i></span><input type="text" name="entry[name]" placeholder="Name" id="entry-name"/>
    </div>
    <!--
    <button type="submit" class="btn btn-primary btn-small">Submit</button>
    -->
  </fieldset>
</form>

<form action="/search" method="POST" class="form-search" id="search-form">
    <div class="input-prepend">
      <span class="add-on"><i class="icon-search"></i></span><input type="text" name="q" placeholder="Search" id="search-q"/>
    </div>
    <button type="submit" class="btn btn-small">Search</button>
  </fieldset>
</form>



<table cellpadding="20" cellspacing="10" class="table table-striped">
  <tr>
    <th>Serial</th>
    <th>Name</th>
  </tr>

  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.serial %></td>
      <td><%= entry.name %></td>
      <td><a href="/delete/<%= entry.id %>"><i class="icon-trash"></i></a></td>
    </tr>
  <% end %>
</table>
